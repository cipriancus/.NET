<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Note Online</title>

    <environment names="Development">
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>

    <link rel="stylesheet" type="text/css" href="~/css/style_site.css" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" id="meniu-id">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a id="a0" asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Note Online FII</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right" id="navbar_right_id">
                    <li><a id="a3" asp-area="" asp-controller="Home" asp-action="Login">Autentificare</a></li>
                    <li><a id="a4" asp-area="" asp-controller="Home" asp-action="Register">Înregistrare</a></li>
                </ul>
            </div>
        </div>
    </div>


    @RenderBody()

    <div class="footer">
        <footer>
            <p><span class="footer-content">Anul 3 &#9733; @DateTime.Now.Year &#9733; Fantastic 5 &#9733;.NET MVC &#9733; onlineGrades</span></p>
        </footer>
    </div>
        
    <script type="text/javascript" src="~/js/site.js"></script>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
     
    @RenderSection("scripts", required: false)
</body>
</html>
